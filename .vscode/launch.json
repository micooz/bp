{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'bp'",
      "cargo": {
        "args": [
          "build",
          "--bin=bp",
          "--package=bp",
          // "--features=monitor"
        ],
        "filter": {
          "name": "bp",
          "kind": "bin"
        }
      },
      "env": {
        "RUST_LOG": "DEBUG",
        "RUST_BACKTRACE": "1"
      },
      "args": [
        "-c",
        "--bind",
        "localhost:9000",
        "--key",
        "test",
        // "--server-host",
        // "localhost",
        // "--server-port",
        // "9090"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'bp'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=bp",
          "--package=bp"
        ],
        "filter": {
          "name": "bp",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in library 'bp-lib'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--lib",
          "--package=bp-lib"
        ],
        "filter": {
          "name": "bp-lib",
          "kind": "lib"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in library 'bp-monitor'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--lib",
          "--package=bp-monitor"
        ],
        "filter": {
          "name": "bp-monitor",
          "kind": "lib"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}